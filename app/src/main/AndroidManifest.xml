            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:excludeFromRecents="true"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>